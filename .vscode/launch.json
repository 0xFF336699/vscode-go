{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			// path to VSCode executable
			"runtimeExecutable": "${execPath}",
			// force VSCode to create a new window and pass this project as an additonal plugin location
			// add workspace path to %GOPATH% so that there is some meaningful contents
			"args": [ "--new-window", "--extensionDevelopmentWorkspacePath=${workspaceRoot}", "C:\\dd\\go" ],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outDir": "out",
			"preLaunchTask": "tsc"
		}
	]
}
